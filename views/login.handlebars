<div class="columns mt-5 has-background-success-light">
    <div class="column ml-5">
      <h2 class="title has-text-success-dark">Login</h2>
  
      <form class="form login-form field" >
        <div class="field">
          <label class="label has-text-success" for="email-login">email:</label>
          <input class="form-input" type="text" id="email-login" />
        </div>
        <div class="field">
          <label class="label has-text-success" for="password-login">password:</label>
          <input class="form-input" type="password" id="password-login" />
        </div>
        <div class="field">
          <button class="btn button is-link" type="submit">login</button>
        </div>
      </form>
    </div>

    <div class="column ml-5">
      <h2 class="title has-text-success-dark">Signup</h2>
      <form class="form signup-form">
        <div class="field">
          <label class="label has-text-success" for="name-signup">name:</label>
          <div class="control">
          <input class="form-input" type="text" id="name-signup" />
        </div>
        </div>
        <div class="field">
          <label class="label has-text-success" for="email-signup">email:</label>
          <div class="control">
          <input class="form-input" type="text" id="email-signup" />
        </div>
        </div>
        <div class="field">
          <label class="label has-text-success" for="password-signup">password:</label>
          <div class="control">
          <input class="form-input" type="password" id="password-signup" />
        </div>
        </div>
        <div class="field">
          <button class="btn button is-link" type="submit">signup</button>
        </div>
      </form>
    </div>
  </div>
  
  <script src="./js/login.js"></script>
