<div class="is-flex-direction-row is-justify-content-space-around">
    <div class="is-flex-direction-column">
      <h2>Login</h2>
  
      <form >
        <div class="field">
          <label class="label" for="email-login">email:</label>
          <input class="form-input" type="text" id="email-login" />
        </div>
        <div class="field">
          <label class="label" for="password-login">password:</label>
          <input class="form-input" type="password" id="password-login" />
        </div>
        <div class="field">
          <button class="button is-link" type="submit">login</button>
        </div>
      </form>
    </div>

    <div class="is-flex-direction-column">
      <h2>Signup</h2>
      <form >
        <div class="field">
          <label class="label" for="name-signup">name:</label>
          <div class="control">
          <input class="form-input" type="text" id="name-signup" />
        </div>
        </div>
        <div class="field">
          <label class="label" for="email-signup">email:</label>
          <div class="control">
          <input class="form-input" type="text" id="email-signup" />
        </div>
        </div>
        <div class="field">
          <label class="label" for="password-signup">password:</label>
          <div class="control">
          <input class="form-input" type="password" id="password-signup" />
        </div>
        </div>
        <div class="field">
          <button class="button is-link" type="submit">signup</button>
        </div>
      </form>
    </div>
  </div>
  
  <script src="./js/login.js"></script>